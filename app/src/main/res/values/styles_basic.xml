<resources>

    <!-- Base application theme. -->
    <style name="Theme.Base" parent="Theme.AppCompat.Light.DarkActionBar" />
        <!-- Customize your theme here. -->
    <style name="Theme.Basic" parent="Theme.Base">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="colorPrimary">@color/toolbarColor</item>
        <item name="colorPrimaryDark">@color/statusColor</item>
        <item name="textSelectColor">?colorPrimary</item>
        <item name="actionModeBackground">?colorPrimary</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@color/background_light</item>
        <item name="android:preferenceCategoryStyle">@style/Preference.Category</item>
        <item name="actionBarPopupTheme">@style/ThemeOverlay.AppCompat</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="colorAccent">#3c69ce</item>
        <item name="cardBackground">@drawable/list_item_background</item>
        <item name="refBackground">@drawable/ref_background_normal</item>
        <item name="titleColor">?colorPrimary</item>
        <item name="subTitleColor">#5d5b5b</item>
        <item name="indicatorColor">?attr/colorPrimary</item>
        <item name="toolbarTheme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="toolbarPopupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>
    <style name="Theme.Basic.TEAL">
        <item name="colorPrimary">#009688</item>
        <item name="colorPrimaryDark">#00796B</item>
        <item name="colorAccent">#009688</item>
    </style>

    <style name="Theme.Basic.BROWN">
        <item name="colorPrimary">#795548</item>
        <item name="colorPrimaryDark">#5D4037</item>
        <item name="colorAccent">#795548</item>
    </style>
    <style name="Theme.Basic.ORANGE">
        <item name="colorPrimary">#FF9800</item>
        <item name="colorPrimaryDark">#F57C00</item>
        <item name="colorAccent">#FF9800</item>
    </style>

    <style name="Theme.Basic.PURPLE">
        <item name="colorPrimary">#9C27B0</item>
        <item name="colorPrimaryDark">#7B1FA2</item>
        <item name="colorAccent">#7C4DFF</item>
    </style>

    <style name="Theme.Basic.GREEN">
        <item name="colorPrimary">#4CAF50</item>
        <item name="colorPrimaryDark">#388E3C</item>
        <item name="colorAccent">#4CAF50</item>
    </style>

    <style name="Theme.Basic.Night" >
        <item name="colorPrimary">#232b38</item>
        <item name="colorPrimaryDark">#191f29</item>
        <item name="colorAccent">@color/accent_material_dark</item>
        <item name="android:windowBackground">@color/background_night</item>
        <item name="textSelectColor">@android:color/white</item>
        <item name="android:textColor">#9bafcc</item>
        <item name="android:textColorPrimary">@color/abc_primary_text_material_dark</item>
        <item name="android:textColorSecondary">@color/abc_secondary_text_material_dark</item>
        <item name="cardBackground">@drawable/list_item_background_night</item>
        <item name="titleColor">?android:textColor</item>
        <item name="subTitleColor">#707e94</item>
        <item name="indicatorColor">?attr/textSelectColor</item>
        <item name="refBackground">@drawable/ref_background_normal_night</item>
        <item name="toolbarPopupTheme">@style/ThemeOverlay.AppCompat</item>
    </style>

    <style name="Theme.Basic.NoAnim">
        <item name="android:windowIsTranslucent">false</item>
    </style>

    <style name="Theme.Basic.TEAL.NoAnim">
        <item name="android:windowIsTranslucent">false</item>
    </style>

    <style name="Theme.Basic.BROWN.NoAnim">
        <item name="android:windowIsTranslucent">false</item>
    </style>
    <style name="Theme.Basic.ORANGE.NoAnim">
        <item name="android:windowIsTranslucent">false</item>
    </style>
    <style name="Theme.Basic.PURPLE.NoAnim">
        <item name="android:windowIsTranslucent">false</item>
    </style>
    <style name="Theme.Basic.GREEN.NoAnim">
        <item name="android:windowIsTranslucent">false</item>
    </style>
    <style name="Theme.Basic.Night.NoAnim">
        <item name="android:windowIsTranslucent">false</item>
    </style>

</resources>
